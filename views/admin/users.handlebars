<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isAdmin}}
        admin
        {{else}}
        user
        {{/if}}
      </td>
      <td>
        {{#if this.isAdmin}}
        <form action="/admin/users/{{this.id}}/authority?_method=PUT" method="POST">
          <button type="submit" class="btn btn-link">set as user</button>
        </form>
        {{else}}
        <form action="/admin/users/{{this.id}}/authority?_method=PUT" method="POST">
          <button type="submit" class="btn btn-link">set as admin</button>
        </form>
        {{/if}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>